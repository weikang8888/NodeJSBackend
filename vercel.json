{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CRM_DB_NAME": "crm",
    "ECOMMERCE_DB_NAME": "ecommerce"
  },
  "functions": {
    "index.js": {
      "maxDuration": 30
    }
  }
} 